<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_memory_table"
    app:startDestination="@id/memoryTableFragment">

    <fragment
        android:id="@+id/memoryTableFragment"
        android:name="me.rerere.rikkahub.ui.fragment.MemoryTableFragment"
        android:label="Memory Table"
        tools:layout="@layout/fragment_memory_table">
        <action
            android:id="@+id/actionMemoryTableFragmentToMemoryTableEditorFragment"
            app:destination="@id/memoryTableEditorFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
            <argument
                android:name="tableId"
                app:argType="string"
                android:defaultValue="" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/memoryTableEditorFragment"
        android:name="me.rerere.rikkahub.ui.fragment.MemoryTableEditorFragment"
        android:label="Edit Memory Table"
        tools:layout="@layout/fragment_memory_table_editor">
        <argument
            android:name="tableId"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

</navigation>